<table class="table table-sm">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Address</th>
      <th scope="col">Postcode</th>
      <th scope="col">City</th>
      <th scope="col">Street</th>
      <th scope="col">Country</th>
    </tr>
  </thead>
  <tbody>
    {{#each (array @left @right) as |record|}}
      <tr>
        <td>{{record.label}}</td>
        <td class={{this.equalPropClass "address"}}> {{record.address.address}}</td>
        <td class={{this.equalPropClass "postcode"}}> {{record.address.postcode}}</td>
        <td class={{this.equalPropClass "city"}}> {{record.address.city}}</td>
        <td class={{this.equalPropClass "street"}}> {{record.address.street}}</td>
        <td class={{this.equalPropClass "country"}}> {{record.address.country}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
