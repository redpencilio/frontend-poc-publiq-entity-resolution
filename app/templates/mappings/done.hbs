<h1>Verified mappings</h1>

<div class="mt-3">
  {{#if @model.length}}
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th scope="col" class="text-end">Match</th>
          <th scope="col">Entity 1</th>
          <th scope="col">Entity 2</th>
          <th scope="col">Score</th>
          <th scope="col">Verified by</th>
          <th scope="col">Comment</th>
        </tr>
      </thead>
      <tbody>
        {{#each @model as |mapping|}}
          <tr>
            <td class="text-end">
              <MappingPredicateBadge @predicate={{mapping.predicate}} />
            </td>
            <td>
              <span>{{mapping.objectLabel}}</span><br>
              <span class="text-muted small">
                <LocationSubline @uri={{mapping.object}} />
              </span>
            </td>
            <td>
              <span>{{mapping.subjectLabel}}</span><br>
              <span class="text-muted small">
                <LocationSubline @uri={{mapping.subject}} />
              </span>
            </td>
            <td>{{mapping.derivedFrom.score}}</td>
            <td>{{mapping.creator.name}}</td>
            <td class="text-muted small">{{mapping.comment}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <Pagination
      @page={{this.page}}
      @size={{this.size}}
      @total={{@model.meta.count}}
      @onPrevious={{this.previousPage}}
      @onNext={{this.nextPage}}
      @onSelectPage={{this.selectPage}} />
  {{else}}
    <BsAlert @type="info" @dismissible={{false}}>
      No verified mappings yet
    </BsAlert>
  {{/if}}
</div>
