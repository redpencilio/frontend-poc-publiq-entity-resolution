{{#if @model}}
  <AddressComparisonTable
    @left={{hash label=@model.mapping.objectLabel address=this.leftAddress}}
    @right={{hash label=@model.mapping.subjectLabel address=this.rightAddress}}
  />
  <div>
    <BsButton @type="success" @onClick={{this.confirmExactMatch}} class="mr-2">
      Exact match
    </BsButton>
    <BsButton @type="warning" @onClick={{this.confirmRelatedMatch}} class="mx-2">
      Related match
    </BsButton>
    <BsButton @type="danger" @onClick={{this.declineMatch}} class="ml-2">
      Decline match
    </BsButton>
  </div>
{{else}}
  <div class="mt-5">
    <BsAlert @type="success" @dismissible={{false}}>
      <strong>Well done!</strong> All mappings are verified.
    </BsAlert>
  </div>
{{/if}}
